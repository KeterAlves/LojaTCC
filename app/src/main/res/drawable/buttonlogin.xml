<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#DC1C1C" />
            <gradient android:angle="-90" android:startColor="#E83737" android:endColor="#8E0000"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#A40000" />
            <solid android:color="#8E0000"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#AD1313" />
            <gradient android:angle="-90" android:startColor="#AD1313" android:endColor="#9A0404" />
        </shape>
    </item>

</selector>